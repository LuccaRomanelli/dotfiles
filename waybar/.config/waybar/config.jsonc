  "custom/weather": {
    "format": "{}",
    "exec": "temp=$(curl -s 'https://wttr.in/Belo+Horizonte?format=%t' 2>/dev/null | sed 's/+/Û∞º≤ /g'); [ -n \"$temp\" ] && echo \"$temp\" || echo 'Û∞º≤ x'",
