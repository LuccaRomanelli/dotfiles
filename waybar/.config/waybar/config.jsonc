    "interval": 1,
    "tooltip": false,
    "on-click-right": "omarchy-launch-floating-terminal-with-presentation omarchy-tz-select"
  },
  "custom/nvidia_usage": {
    "class": "gpu",
    "format": "Û∞çõGPU {}%",
    "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits | head -n1",
