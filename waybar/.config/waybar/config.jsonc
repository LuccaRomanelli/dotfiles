  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 50,
  "modules-left": [
    "custom/archlogo",
    "custom/omarchy",
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [
    "clock",
    "custom/weather",
    "custom/update",
    "custom/screenrecording-indicator"
  ],
  "modules-right": [
    "mpris",
    //"bluetooth",
    "network",
    "pulseaudio",
    "battery",
    "disk",
